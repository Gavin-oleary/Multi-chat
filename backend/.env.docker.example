# ========================================
# Multi-Model Chat - Docker Configuration
# ========================================
# Copy this file to .env and fill in your API keys

# ========================================
# PostgreSQL Configuration
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_to_a_secure_password
POSTGRES_DB=multichat
POSTGRES_PORT=5432

# ========================================
# Redis Configuration
# ========================================
REDIS_PORT=6379

# ========================================
# API Keys - REQUIRED
# ========================================
# Get your FREE API keys from these providers:
#
# 1. OpenAI (ChatGPT)
#    - https://platform.openai.com/api-keys
#    - Sign up, go to API Keys, create new key
#
# 2. Anthropic (Claude)
#    - https://console.anthropic.com/
#    - Sign up, go to API Keys, create new key
#
# 3. Google (Gemini)
#    - https://makersuite.google.com/app/apikey
#    - Sign in with Google account, get API key
#
# 4. X.AI (Grok)
#    - https://x.ai/api
#    - Request API access
#
# 5. Perplexity
#    - https://www.perplexity.ai/settings/api
#    - Create account, generate API key

OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
GROK_API_KEY=
PERPLEXITY_API_KEY=

# ========================================
# Application Ports
# ========================================
# Change these if the default ports are already in use
BACKEND_PORT=8000
FRONTEND_PORT=5173

# ========================================
# Frontend Environment
# ========================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# ========================================
# Application Settings
# ========================================
DEBUG=false
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ========================================
# Optional: Let's Encrypt (for production deployment)
# ========================================
# DOMAIN=yourdomain.com
# LETSENCRYPT_EMAIL=your-email@example.com
